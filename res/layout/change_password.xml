<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/gray_theme">

    <TextView
        android:id="@+id/tvheader1"
        android:layout_width="fill_parent"
        android:layout_height="57dp"
        android:background="@color/blue_theme"
        style="@style/ShodowFont"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:textSize="20dp" />
    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" 
     android:id="@+id/changepassword">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvOldPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Old password"
            style="@style/CodeFont"/>

        <EditText
            android:id="@+id/etOldPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:ems="10"
            android:hint="Enter old password"
            android:inputType="textPassword"
            style="@style/EditTextAppTheme" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvNewPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="New password"
            style="@style/CodeFont" />

        <EditText
            android:id="@+id/etNewPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:ems="10"
            android:hint="Enter new password"
            android:inputType="textPassword"
            style="@style/EditTextAppTheme" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvconfirmPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Confirm password"
            style="@style/CodeFont" />

        <EditText
            android:id="@+id/etconfirmPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:ems="10"
            android:hint="Re-enter password"
            android:inputType="textPassword"
            style="@style/EditTextAppTheme" >

            <requestFocus />
        </EditText>
    </LinearLayout>
    </LinearLayout>
    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" 
  
     android:id="@+id/changeusername">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Old username"
            style="@style/CodeFont" />

        <EditText
            android:id="@+id/etOld_User_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:ems="10"
            android:hint="Enter old username"
            style="@style/EditTextAppTheme" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvNewUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="New username"
            style="@style/CodeFont" />

        <EditText
            android:id="@+id/etNewUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:ems="10"
            android:hint="Enter new username"
            style="@style/EditTextAppTheme" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        
       >

        <TextView
            android:id="@+id/tvpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Password               "
            style="@style/CodeFont" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:ems="10"
            android:hint="Enter password"
            android:inputType="textPassword"
            style="@style/EditTextAppTheme" >

            <requestFocus />
        </EditText>
    </LinearLayout>
    </LinearLayout>

<TextView
         android:id="@+id/tverror_msg1"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:textColor="#008000"
         style="@style/CodeFont"
         android:textAlignment="center"
         android:gravity="center"
        android:visibility="gone"/>

    <LinearLayout
			     android:layout_width="fill_parent"
			     android:layout_height="wrap_content"
			     android:layout_gravity="bottom"
			     android:gravity="center"
			     android:orientation="horizontal" 
			     android:layout_alignParentBottom="true">

                 <Button
                     android:id="@+id/btnSave"
                     android:layout_width="wrap_content"
                     android:layout_height="50dp"
                     android:text="Done"
                     android:layout_weight="1"
                     style="@style/DefaultButton"
                     android:gravity="center"
                     android:layout_alignParentBottom="true"
                     android:layout_gravity="center_vertical" />
                 <Button
                    android:id="@+id/btnCancel"  
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Cancel"
                    style="@style/DefaultButton"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
</LinearLayout>